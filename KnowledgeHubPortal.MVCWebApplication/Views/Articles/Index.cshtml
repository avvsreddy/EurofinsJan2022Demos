@model IEnumerable<KnowledgeHubPortal.MVCWebApplication.Models.ArticleBrowseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Browse Articles</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contributor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <a href="@item.ArticleUrl" target="_blank">@item.Title</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contributor)
        </td>
    </tr>
}

</table>
